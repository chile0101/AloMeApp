<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_pressed="false" android:left="-2dp" android:top="0dp" android:right="-2dp" android:bottom="-2dp">
        <shape android:dither="true" android:shape="rectangle">
            <gradient android:startColor="#ffffff" android:endColor="#ffffff" android:useLevel="false" android:type="radial" android:gradientRadius="150"/>
            <corners android:radius="1dp" android:topLeftRadius="0.1dp" android:topRightRadius="0.1dp" android:bottomLeftRadius="10dp" android:bottomRightRadius="10dp"/>
            <stroke android:width="1dp" android:color="#d7d8d9"/>
        </shape>
    </item>
    <item android:state_pressed="true" android:left="-2dp" android:top="0dp" android:right="-2dp" android:bottom="-2dp">
        <shape android:dither="true" android:shape="rectangle">
            <gradient android:startColor="#cdd6d1" android:endColor="#cdd6d1" android:useLevel="false" android:type="radial" android:gradientRadius="150"/>
            <corners android:radius="1dp" android:topLeftRadius="0.1dp" android:topRightRadius="0.1dp" android:bottomLeftRadius="10dp" android:bottomRightRadius="10dp"/>
            <stroke android:width="1dp" android:color="#d7d8d9"/>
        </shape>
    </item>
</selector>