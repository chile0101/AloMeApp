<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <gradient
                android:startColor="#e1f5c4"
                android:endColor="#ede574
"
                android:angle="270" />
            <corners
                android:radius="0dp"/>
            <padding
                android:right="0dp"
                android:top="0dp"
                android:bottom="0dp"
                android:left="0dp"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="#e1f5c4"/>

            <corners
                android:radius="32dp"/>
            <padding
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp"
                android:left="10dp"/>
        </shape>

    </item>
</selector>