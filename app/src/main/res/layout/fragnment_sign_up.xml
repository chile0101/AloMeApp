<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_270sdp">
    <EditText
        android:id="@+id/edtFullName"
        android:hint="@string/profile_page_name_text"
        android:inputType="text"
        android:fontFamily="@font/thaisansneue_regular"
        style="@style/EditTextUnderLineStyle"/>
    <TextView
        android:textSize="@dimen/_10ssp"
        android:textColor="@color/badge_color"
        android:gravity="right"
        android:id="@+id/tvFullNameError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_3sdp"
        android:fontFamily="@font/thaisansneue_regular"/>
    <EditText
        android:id="@+id/edtEmail"
        android:hint="@string/signup_page_email_text"
        android:inputType="textEmailAddress"
        android:fontFamily="@font/thaisansneue_regular"
        style="@style/EditTextUnderLineStyle"/>
    <TextView
        android:textSize="@dimen/_10ssp"
        android:textColor="@color/badge_color"
        android:gravity="right"
        android:id="@+id/tvEmailError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_3sdp"
        android:fontFamily="@font/thaisansneue_regular"/>
    <EditText
        android:id="@+id/edtPassword"
        android:hint="@string/sign_in_password"
        android:inputType="textPassword"
        android:fontFamily="@font/thaisansneue_regular"
        style="@style/EditTextUnderLineStyle"/>
    <TextView
        android:textSize="@dimen/_10ssp"
        android:textColor="@color/badge_color"
        android:gravity="right"
        android:id="@+id/tvPasswordError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_3sdp"
        android:fontFamily="@font/thaisansneue_regular"/>
    <EditText android:id="@+id/edtConfirmPassword"
        android:hint="@string/signup_page_confirm_password_text"
        android:inputType="textPassword"
        android:fontFamily="@font/thaisansneue_regular"
        style="@style/EditTextUnderLineStyle"/>
    <TextView
        android:textSize="@dimen/_10ssp"
        android:textColor="@color/badge_color"
        android:gravity="right"
        android:id="@+id/tvConfirmPasswordError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_3sdp"
        android:fontFamily="@font/thaisansneue_regular"/>
    <Button
        android:id="@+id/btnSignUp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_18sdp"
        android:text="@string/signin_signup_page_register_text"
        style="@style/OrangeButtonWrapContentStyle"/>[
</LinearLayout>
