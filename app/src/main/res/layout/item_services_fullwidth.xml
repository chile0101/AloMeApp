<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_8"
        android:layout_marginLeft="@dimen/padding_16"
        android:layout_marginRight="@dimen/padding_8">
        <android.support.v7.widget.CardView
            android:id="@+id/cv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_2"
            android:layout_marginTop="@dimen/padding_2"
            android:layout_marginRight="@dimen/padding_8"
            android:layout_marginBottom="@dimen/padding_2"
            app:cardCornerRadius="@dimen/padding_8">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imgService"
                    android:background="@color/light_transparent"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"/>
                <TextView
                    android:id="@+id/tvNameService"
                    android:textSize="20sp"
                    android:textColor="@color/dark_gray_color"
                    android:ellipsize="end"
                    android:lines="1"
                    android:singleLine="true"
                    android:fontFamily="@font/thaisansneue_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_8"
                    android:layout_marginTop="@dimen/padding_8"/>
                <LinearLayout
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_8"
                    android:layout_marginTop="@dimen/padding_4"
                    android:layout_marginBottom="@dimen/padding_8">
                    <TextView
                        android:textSize="@dimen/text_size_14"
                        android:textColor="@color/dark_gray_color"
                        android:id="@+id/tvFullPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/thaisansneue_regular"
                        android:layout_marginEnd="@dimen/padding_4"/>
                    <TextView
                        android:textSize="@dimen/text_size_20"
                        android:textColor="@color/colorPrimary"
                        android:id="@+id/tvSalePrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/thaisansneue_bold"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>