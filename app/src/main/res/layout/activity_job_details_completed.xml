<RelativeLayout android:background="@color/disable_action_type_btn_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/toolbarWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include layout="@layout/toolbar" />
    </LinearLayout>

    <ScrollView
        android:layout_below="@+id/toolbarWrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_marginTop="16dp"
                android:background="@color/white"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvCreateAt"
                    android:textSize="@dimen/text_size_12"
                    android:fontFamily="@font/roboto"
                    android:layout_gravity="center"
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <Button
                    android:text="@string/completed"
                    android:id="@+id/btnStatus"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="@style/status_job_100"
                    android:textSize="10sp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:padding="8dp" />
            </LinearLayout>

            <TableLayout
                android:layout_marginTop="16dp"
                android:background="@color/white"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="0,1"
                android:padding="8dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto"
                        android:gravity="center"
                        android:text="@string/service"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/text_size_16" />

                    <TextView
                        android:id="@+id/tvServiceName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_weight="3"
                        android:fontFamily="@font/roboto"
                        android:paddingLeft="8dp"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/text_size_16" />
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@drawable/available_date_time_recycler_view_divider" />


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto"
                        android:gravity="center"
                        android:text="@string/time"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/text_size_16" />
                    <LinearLayout
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp">
                        <TextView
                            android:id="@+id/tvHour"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto"
                            android:paddingLeft="8dp"
                            android:textColor="@color/black_color"
                            android:textSize="@dimen/text_size_16" />
                    </LinearLayout>

                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@drawable/available_date_time_recycler_view_divider" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto"
                        android:gravity="center"
                        android:text="@string/date"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/text_size_16" />

                    <LinearLayout
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp">
                        <TextView
                            android:id="@+id/tvDate"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto"
                            android:paddingLeft="8dp"
                            android:textColor="@color/black_color"
                            android:textSize="@dimen/text_size_16" />
                    </LinearLayout>
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@drawable/available_date_time_recycler_view_divider" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto"
                        android:gravity="center"
                        android:text="@string/address"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/text_size_16" />

                    <TextView
                        android:id="@+id/tvAddress"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_weight="3"
                        android:fontFamily="@font/roboto"
                        android:paddingLeft="8dp"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/text_size_16" />
                </TableRow>
            </TableLayout>

            <TableLayout
                android:layout_marginTop="16dp"
                android:background="@color/white"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="0,1"
                android:padding="8dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto"
                        android:gravity="center"
                        android:text="@string/description"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/text_size_16" />

                    <TextView
                        android:id="@+id/tvDescription"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_weight="3"
                        android:fontFamily="@font/roboto"
                        android:paddingLeft="8dp"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/text_size_16" />
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@drawable/available_date_time_recycler_view_divider" />


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp">

                    <HorizontalScrollView
                        android:layout_weight="1"
                        android:id="@+id/hori_scroll_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fillViewport="false"
                        android:foregroundGravity="left">

                        <LinearLayout
                            android:id="@+id/selected_photos_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:animateLayoutChanges="true"
                            android:gravity="left"
                            android:orientation="horizontal"
                            android:visibility="visible">
                            <!--Image added here-->
                        </LinearLayout>

                    </HorizontalScrollView>
                </TableRow>

            </TableLayout>

            <!--Có provider chấp nhận-->
            <LinearLayout
                android:visibility="visible"
                android:id="@+id/wrapperProvider"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:background="@color/white"
                android:paddingTop="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvStatus"
                    android:textSize="@dimen/text_size_12"
                    android:fontFamily="@font/roboto"
                    android:layout_gravity="center"
                    android:text="@string/your_request_has_been_accepted_by"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/layoutProvider"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.v7.widget.CardView
                        android:id="@+id/imgWrapper"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:elevation="12dp"
                        android:innerRadius="0dp"
                        android:shape="ring"
                        android:thicknessRatio="1.9">
                        <ImageView
                            android:id="@+id/imgAvatar"
                            android:scaleType="fitCenter"
                            android:layout_width="wrap_content"
                            android:layout_height="80dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true" />
                    </android.support.v7.widget.CardView>

                    <TextView
                        android:id="@+id/tvNameProvider"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:fontFamily="@font/roboto_bold"
                        android:maxLines="2"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/imgWrapper"
                        app:layout_constraintTop_toTopOf="@+id/imgWrapper" />

                    <TextView
                        android:id="@+id/txtServiceName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="4dp"
                        android:textSize="12sp"
                        android:fontFamily="@font/roboto"
                        app:layout_constraintStart_toEndOf="@+id/imgWrapper"
                        app:layout_constraintTop_toBottomOf="@+id/tvNameProvider" />


                    <RatingBar
                        android:id="@+id/ratingBar"
                        style="@style/CustomRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="16dp"
                        android:layout_marginStart="8dp"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:stepSize="0.2"
                        app:layout_constraintBottom_toBottomOf="@+id/imgWrapper"
                        app:layout_constraintStart_toEndOf="@+id/imgWrapper" />

                    <TextView
                        android:id="@+id/txtNumOfRatings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/roboto"
                        android:textSize="12dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/ratingBar" />


                </android.support.constraint.ConstraintLayout>

            </LinearLayout>

            <LinearLayout
                android:visibility="visible"
                android:id="@+id/wrapperPrice"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:background="@color/white"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/text_size_12"
                    android:fontFamily="@font/roboto"
                    android:layout_gravity="center"
                    android:text="@string/for_a_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/roboto_bold"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:text="200.000/giờ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="@dimen/text_size_12"
                    android:fontFamily="@font/roboto"
                    android:layout_gravity="center"
                    android:text="@string/excluding_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:visibility="visible"
                android:id="@+id/wrapperReview"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:background="@drawable/shape_wrapper_review"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:lineHeight="20dp"
                    android:textSize="@dimen/text_size_16"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:text="@string/txt_review_job_done"
                    android:textColor="@color/white"
                    android:maxLines="5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Button
                    android:layout_gravity="center"
                    android:minHeight="0dp"
                    android:id="@+id/btnReview"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/shape_btn_review"
                    android:text="@string/review_now"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_12"
                    android:fontFamily="@font/roboto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</RelativeLayout>