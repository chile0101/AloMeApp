<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/cardlist_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card:cardCornerRadius="16dp">

<LinearLayout
    android:id="@+id/dialogWrapper"
    android:padding="0dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/shape_alert_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:paddingTop ="8dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:id="@+id/layoutTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/ic_warning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="center"
                android:textSize="@dimen/text_size_16"
                android:textColor="@color/black_color"
                android:id="@+id/tvTitle"
                android:padding="@dimen/padding_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Warning"
                android:fontFamily="@font/roboto"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:fontFamily="@font/roboto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Warning"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:id="@+id/text_dialog"
        android:layout_below="@+id/a"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="36dp"
        android:padding="12dp"
        android:textSize="@dimen/text_size_16"
        android:textColor="#ff000000"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal" />

    <LinearLayout
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="@color/white"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_marginBottom="6dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="ok"
            android:fontFamily="@font/roboto"
            android:id="@+id/btnOk"
            android:textSize="@dimen/text_size_12"
            android:background="@drawable/shape_btn_ok"
            android:textColor="@color/white" />
        <!--<View-->
            <!--android:layout_marginTop="8dp"-->
            <!--android:layout_marginBottom="8dp"-->
            <!--android:id="@+id/viewDivider"-->
            <!--android:background="@drawable/available_date_time_recycler_view_divider"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="@dimen/divider_height" />-->
        <Button
            android:layout_marginTop="6dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Há»§y"
            android:fontFamily="@font/roboto"
            android:id="@+id/btnCancel"
            android:textSize="@dimen/text_size_12"
            android:background="@drawable/shape_btn_cancel"
            android:textColor="@color/black_color" />
    </LinearLayout>
</LinearLayout>

</android.support.v7.widget.CardView>
