<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="@dimen/margin_medium"
    android:paddingLeft="@dimen/margin_medium"
    android:paddingRight="@dimen/margin_medium">

    <TextView
        android:id="@+id/titleText"
        style="@style/TextAppearance.AppRatingDialog.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_tiny"
        android:gravity="center_horizontal"
        android:visibility="gone"
        tools:visibility="visible"
        tools:text="Did you like the app ?" />

    <TextView
        android:id="@+id/descriptionText"
        style="@style/TextAppearance.AppRatingDialog.Description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_tiny"
        android:visibility="gone"
        android:gravity="center_horizontal"
        tools:visibility="visible"
        tools:text="Let us know what you think" />

    <View
        android:id="@+id/view"
        android:layout_width="585dp"
        android:layout_height="@dimen/_1sdp"
        android:background="@drawable/available_date_time_recycler_view_divider" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:numStars="5"
        android:rating="0"
        android:stepSize="0.5"
        android:theme="@style/RatingBar" />

    <View
        android:id="@+id/view1"
        android:layout_width="585dp"
        android:layout_height="@dimen/_1sdp"
        android:background="@drawable/available_date_time_recycler_view_divider" />


    <TextView
        android:id="@+id/noteDescriptionText"
        style="@style/TextAppearance.AppRatingDialog.NoteLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_medium"
        android:gravity="center_horizontal"
        android:textColor="?attr/colorAccent"
        tools:text="Very good" />

    <EditText
        android:id="@+id/commentEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textCursorDrawable="@null"
        android:background="@drawable/edit_text_background"
        android:gravity="top"
        android:inputType="text|textMultiLine"
        android:lines="5"
        android:padding="@dimen/margin_pre_medium"
        android:layout_marginBottom="@dimen/margin_medium"
        tools:ignore="LabelFor" />

    <LinearLayout
        android:gravity="right"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_marginRight="36dp"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:background="@color/white"
            android:text="Cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:background="@color/white"
            android:text="Send Comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>