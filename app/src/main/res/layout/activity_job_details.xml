<RelativeLayout android:background="@color/disable_action_type_btn_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/toolbarWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include layout="@layout/toolbar" />
    </LinearLayout>

    <ScrollView
        android:layout_below="@+id/toolbarWrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_marginTop="16dp"
                android:background="@color/white"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvCreateAt"
                    android:textSize="@dimen/text_size_12"
                    android:fontFamily="@font/roboto"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:text="Ngày đăng: 15/11/2019"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/btnStatus"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="@style/status_job_100"
                    android:text="Đã gửi yêu cầu"
                    android:textSize="10sp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:padding="8dp" />
            </LinearLayout>

            <TableLayout
                android:layout_marginTop="16dp"
                android:background="@color/white"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="0,1"
                android:padding="8dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto"
                        android:gravity="center"
                        android:text="Dịch vụ"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/text_size_16" />

                    <TextView
                        android:id="@+id/tvServiceName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_weight="3"
                        android:fontFamily="@font/roboto"
                        android:paddingLeft="8dp"
                        android:text="Sửa chữa điện nước dân dụng"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/text_size_16" />
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@drawable/available_date_time_recycler_view_divider" />


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto"
                        android:gravity="center"
                        android:text="Giờ hẹn"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/text_size_16" />
                    <LinearLayout
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp">
                        <TextView
                            android:id="@+id/tvHour"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto"
                            android:paddingLeft="8dp"
                            android:text=" 12 giờ"
                            android:textColor="@color/black_color"
                            android:textSize="@dimen/text_size_16" />
                        <TextView
                            android:id="@+id/tvEditHour"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto"
                            android:paddingLeft="8dp"
                            android:text="@string/edit"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/text_size_16" />
                    </LinearLayout>

                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@drawable/available_date_time_recycler_view_divider" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto"
                        android:gravity="center"
                        android:text="Ngày hẹn"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/text_size_16" />

                    <LinearLayout
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp">
                        <TextView
                            android:id="@+id/tvDate"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto"
                            android:paddingLeft="8dp"
                            android:text="15/12/2019"
                            android:textColor="@color/black_color"
                            android:textSize="@dimen/text_size_16" />
                        <TextView
                            android:id="@+id/tvEditDate"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto"
                            android:paddingLeft="8dp"
                            android:text="@string/edit"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/text_size_16" />
                    </LinearLayout>
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@drawable/available_date_time_recycler_view_divider" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto"
                        android:gravity="center"
                        android:text="Địa chỉ"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/text_size_16" />

                    <TextView
                        android:id="@+id/tvAddress"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_weight="3"
                        android:fontFamily="@font/roboto"
                        android:paddingLeft="8dp"
                        android:text="41/5 Mai Lão Bạng Phường 13 Tân Bình"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/text_size_16" />
                </TableRow>
            </TableLayout>

            <TableLayout
                android:layout_marginTop="16dp"
                android:background="@color/white"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="0,1"
                android:padding="8dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto"
                        android:gravity="center"
                        android:text="Mô tả"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/text_size_16" />

                    <TextView
                        android:id="@+id/tvDescription"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_weight="3"
                        android:fontFamily="@font/roboto"
                        android:paddingLeft="8dp"
                        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/text_size_16" />
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@drawable/available_date_time_recycler_view_divider" />


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp">

                    <HorizontalScrollView
                        android:layout_weight="1"
                        android:id="@+id/hori_scroll_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:fillViewport="false"
                        android:foregroundGravity="left">

                        <LinearLayout
                            android:id="@+id/selected_photos_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:animateLayoutChanges="true"
                            android:gravity="left"
                            android:orientation="horizontal"
                            android:visibility="visible">

                            <ImageView

                                android:src="@drawable/ic_facebook_logo"
                                android:layout_width="100dp"
                                android:layout_height="100dp" />
                            <ImageView
                                android:src="@drawable/ic_facebook_logo"
                                android:layout_width="100dp"
                                android:layout_height="100dp" />
                            <ImageView
                                android:src="@drawable/ic_facebook_logo"
                                android:layout_width="100dp"
                                android:layout_height="100dp" />
                            <ImageView
                                android:src="@drawable/ic_facebook_logo"
                                android:layout_width="100dp"
                                android:layout_height="100dp" />
                            <ImageView
                                android:src="@drawable/ic_facebook_logo"
                                android:layout_width="100dp"
                                android:layout_height="100dp" />
                            <ImageView
                                android:src="@drawable/ic_facebook_logo"
                                android:layout_width="100dp"
                                android:layout_height="100dp" />

                        </LinearLayout>

                    </HorizontalScrollView>
                </TableRow>

            </TableLayout>

            <!-- Đã gửi yêu cầu-->
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:background="@color/white"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/text_size_12"
                    android:fontFamily="@font/roboto"
                    android:layout_gravity="center"
                    android:text="Công việc bạn yêu cầu hiện tại chưa có ai chấp nhận"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!--Có provider chấp nhận-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:background="@color/white"
                android:paddingTop="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/text_size_12"
                    android:fontFamily="@font/roboto"
                    android:layout_gravity="center"
                    android:text="Yêu cầu của bạn đã được chấp nhận bởi:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/layoutProvider"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.v7.widget.CardView
                        android:id="@+id/imgAvatar"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:elevation="12dp"
                        android:innerRadius="0dp"
                        android:shape="ring"
                        android:thicknessRatio="1.9">

                        <ImageView
                            android:scaleType="fitCenter"

                            android:layout_width="wrap_content"
                            android:layout_height="80dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:src="@mipmap/ic_launcher_foreground" />
                    </android.support.v7.widget.CardView>

                    <TextView
                        android:id="@+id/txtName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:fontFamily="@font/roboto_bold"
                        android:maxLines="2"
                        android:text="Điện Máy Hoàng Gia Huỳnh Việt"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/imgAvatar"
                        app:layout_constraintTop_toTopOf="@+id/imgAvatar" />

                    <TextView
                        android:id="@+id/txtServiceName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="4dp"
                        android:text="Chuyên sửa chữa thiết bị điện nước"
                        android:textSize="12sp"
                        android:fontFamily="@font/roboto"
                        app:layout_constraintStart_toEndOf="@+id/imgAvatar"
                        app:layout_constraintTop_toBottomOf="@+id/txtName" />


                    <RatingBar
                        android:id="@+id/ratingBar"
                        style="@style/CustomRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="16dp"
                        android:layout_marginStart="8dp"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:stepSize="0.2"
                        app:layout_constraintBottom_toBottomOf="@+id/imgAvatar"
                        app:layout_constraintStart_toEndOf="@+id/imgAvatar" />

                    <TextView
                        android:id="@+id/txtNumOfRatings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/roboto"
                        android:text="( 5 đánh giá )"
                        android:textSize="12dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/ratingBar" />


                </android.support.constraint.ConstraintLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:background="@color/white"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/text_size_12"
                    android:fontFamily="@font/roboto"
                    android:layout_gravity="center"
                    android:text="Với mức phí:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/roboto_bold"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:text="200.000/giờ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="@dimen/text_size_12"
                    android:fontFamily="@font/roboto"
                    android:layout_gravity="center"
                    android:text="( Chưa bao gồm phí thay thế lắp đặt )"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:background="@color/white"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btnAccess"
                    android:layout_marginLeft="36dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/shape_btn_access"
                    android:layout_weight="1"
                    android:text="Chấp nhận"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_12"
                    android:fontFamily="@font/roboto"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/btnRefuse"
                    android:layout_marginRight="36dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/shape_btn_refuse"
                    android:layout_weight="1"
                    android:text="Từ chối"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_12"
                    android:fontFamily="@font/roboto"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:background="@color/white"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="@dimen/text_size_12"
                    android:fontFamily="@font/roboto"
                    android:layout_gravity="center"
                    android:text="Tuyệt vời ! Lịch hẹn đã được thiết lập"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


        </LinearLayout>



    </ScrollView>
</RelativeLayout>