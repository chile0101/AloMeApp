<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".activity.LandingActivity">

    <TextView
        android:id="@+id/txtAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/roboto"
        android:text="AloMe"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_26ssp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_260sdp"
        android:layout_below="@+id/txtAppName" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewPager"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/dotsLayout"/>

    <LinearLayout
        android:layout_below="@+id/dotsLayout"
        android:layout_marginLeft="@dimen/_48sdp"
        android:layout_marginRight="@dimen/_48sdp"
        android:layout_marginTop="@dimen/_32sdp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnFacebookSignIn"
            style="@style/FacebookButtonStyle"
            android:fontFamily="@font/roboto"
            android:text="@string/log_in_with_facebook" />

        <Button
            android:id="@+id/btnGoogleSignIn"
            style="@style/GoogleButtonStyle"
            android:layout_marginTop="@dimen/_12sdp"
            android:fontFamily="@font/roboto"
            android:text="@string/log_in_with_google" />
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp">
            <View
                android:background="@drawable/available_date_time_recycler_view_divider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_weight="1"/>
            <TextView
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/gray_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:fontFamily="@font/roboto"
                android:text="@string/or"/>
            <View
                android:background="@drawable/available_date_time_recycler_view_divider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_weight="1"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnSignInSignUp"
            style="@style/SignInSignUpButtonStyle"
            android:layout_marginLeft="@dimen/_24sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_24sdp"
            android:fontFamily="@font/roboto"
            android:text="@string/login_register" />
    </LinearLayout>
</RelativeLayout>