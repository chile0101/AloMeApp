<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:fontFamily">@font/thaisansneue_bold</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FullScreen" parent="AppTheme">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="FacebookButtonStyle">
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/facebook_sign_in_btn_selector</item>
        <item name="android:padding">@dimen/padding_8</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/btn_height</item>
        <item name="android:drawableLeft">@drawable/ic_facebook_logo</item>
        <item name="android:drawablePadding">-20dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/thaisansneue_bold</item>
    </style>
    <style name="GoogleButtonStyle">
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/google_sign_in_btn_selector</item>
        <item name="android:padding">@dimen/padding_8</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/btn_height</item>
        <item name="android:drawableLeft">@drawable/ic_google_logo</item>
        <item name="android:drawablePadding">-20dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/thaisansneue_bold</item>
    </style>

    <style name="SignInSignUpButtonStyle">
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:textColor">@color/dark_gray_color</item>
        <item name="android:background">@drawable/sign_in_sign_up_btn_selector</item>
        <item name="android:padding">@dimen/padding_8</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/btn_height</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/thaisansneue_bold</item>
    </style>

    <style name="SignInSignUpTabLayout">
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabBackground">@android:color/transparent</item>
        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="tabSelectedTextColor">@color/black_color</item>
        <item name="tabTextColor">@color/dark_gray_color</item>
        <item name="tabTextAppearance">@style/SignInSignUpTabTextAppearance</item>
    </style>
    <style name="SignInSignUpTabTextAppearance">
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/thaisansneue_bold</item>
    </style>
    <style name="StepTabLayout">
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabBackground">@android:color/transparent</item>
        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="tabSelectedTextColor">@color/black_color</item>
        <item name="tabTextColor">@color/dark_gray_color</item>
        <item name="tabTextAppearance">@style/StepTabTextAppearance</item>
    </style>
    <style name="StepTabTextAppearance">
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/thaisansneue_bold</item>
    </style>


    <style name="OrangeButtonWrapContentStyle">
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/orange_btn_selector</item>
        <item name="android:paddingTop">@dimen/_6sdp</item>
        <item name="android:paddingBottom">@dimen/_6sdp</item>
        <item name="android:paddingLeft">@dimen/_32sdp</item>
        <item name="android:paddingRight">@dimen/_32sdp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/btn_height</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/thaisansneue_bold</item>
    </style>

    <!-- ========================Slide =======================-->

    <style name="HeadingSlideStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">@dimen/_24sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_22ssp</item>
        <item name="android:fontFamily">@font/thaisansneue_bold</item>
    </style>
    <style name="TextSlideStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/_20sdp</item>
        <item name="android:layout_marginRight">@dimen/_20sdp</item>
        <item name="android:layout_marginTop">@dimen/_12sdp</item>
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:fontFamily">@font/thaisansneue_regular</item>
        <item name="android:textAlignment">center</item>
    </style>
    <!--=====================================================-->

    <style name="EditTextUnderLineStyle">
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:textColor">@color/dark_gray_color</item>
        <item name="android:textColorHint">@color/gray_color</item>
        <item name="android:background">@drawable/edittext_bg</item>
        <item name="android:paddingTop">@dimen/padding_8</item>
        <item name="android:paddingBottom">@dimen/padding_8</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">@font/thaisansneue_regular</item>
    </style>

    <style name="BottomNavigationView">
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>
    <style name="BottomNavigationView.Active">
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/text_size_26</item>
    </style>

    <style name="TextViewTitleFormStyle">
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:textColor">@color/dark_gray_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/thaisansneue_regular</item>
    </style>
    <style name="EditTextInPutTypeTextFormStyle">
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:textColor">@color/orange_color</item>
        <item name="android:background">@drawable/edittext_bg</item>
        <item name="android:padding">@dimen/padding_8</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:inputType">text</item>
        <item name="android:fontFamily">@font/thaisansneue_regular</item>
    </style>

    <style name="TransparentButtonMatchParentStyle">
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:textColor">@color/black_color</item>
        <item name="android:background">@drawable/transparent_btn_selector</item>
        <item name="android:padding">@dimen/padding_8</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/btn_height</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/thaisansneue_bold</item>
    </style>
    <style name="TextViewDescriptionFormStyle">
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:textColor">@color/orange_color</item>
        <item name="android:background">@drawable/edittext_bg</item>
        <item name="android:padding">@dimen/padding_8</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/thaisansneue_regular</item>
    </style>
    <style name="OrangeButtonMatchParentStyle">
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/orange_btn_selector</item>
        <item name="android:padding">@dimen/padding_8</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/btn_height</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/thaisansneue_bold</item>
    </style>
    <style name="EditTextInPutTypeNumberFormStyle">
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:textColor">@color/orange_color</item>
        <item name="android:background">@drawable/edittext_bg</item>
        <item name="android:padding">@dimen/padding_8</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:inputType">number</item>
        <item name="android:fontFamily">@font/thaisansneue_regular</item>
    </style>
    <style name="EditTextInPutTypeDescriptionFormStyle">
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:textColor">@color/orange_color</item>
        <item name="android:background">@drawable/edittext_description_bg</item>
        <item name="android:padding">@dimen/padding_8</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">1</item>

        <item name="android:fontFamily">@font/thaisansneue_regular</item>
    </style>

    <style name="DialogNoTitle" parent="@style/Theme.AppCompat.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>
    </resources>
