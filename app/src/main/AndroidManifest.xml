<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thesis.alome">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.LaunchActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
            android:label="@string/title_activity_launch">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.SettingActivity" />
        <activity android:name=".activity.JobDetailsCompletedActivity">
            <intent-filter>
                <action android:name="com.thesis.alome_COMPLETE_TARGET_NOTIFICATION" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.JobDetailsActivity">
            <intent-filter>
                <action android:name="com.thesis.alome_TARGET_NOTIFICATION" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.ProviderDetailsActivity" />
        <activity
            android:name=".activity.ProviderListActivity"
            android:label="@string/title_activity_provider_list" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity android:name=".activity.MapsActivity" />
        <activity android:name=".activity.StepActivity" />
        <activity android:name=".activity.ProfileActivity" />
        <activity
            android:name=".activity.LandingActivity"
            android:screenOrientation="portrait"
            android:theme="@style/FullScreen">
        </activity>
        <activity android:name=".activity.SignInSignUpActivity" />
        <activity android:name=".activity.MainActivity" />
        <activity android:name=".activity.LoadMoreServices" />
        <activity android:name=".activity.ServiceDetailActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <service android:name=".helper.MyFirebase">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>